#!/usr/bin/make -f

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

PACKAGE = edb

include debian/debian-vars.mk

config.status: configure
	# target: config.status
	dh_testdir
	./configure --prefix=$(PKGDIR)/usr

build-stamp: config.status
	# target: build-stamp
	dh_testdir

	# Reset *any* jobserver -j options. Won't compile in parallel
	$(MAKE) MAKEFLAGS= MFLAGS=

	touch build-stamp

build: build-stamp

clean:
	# target: clean
	dh_testdir
	dh_testroot
	rm -rf build-stamp $(PKGDIR)

	[ ! -f GNUMakefile ] || $(MAKE) clean

	find . -name GNUmakefile \
		-o -name "*[#~]*" \
		| xargs -r rm

	rm -f lisp/*.elc

	# Generated files
	rm -f lisp/edbcore.el
	rm -f doc/refcard.aux doc/refcard.log

	rm -f config.log config.status \
		examples/null examples/passwd \
		tests/ebatch

	dh_clean

install: build
	# target: install
	dh_testdir
	dh_testroot
	dh_prep

	# target: install call make
	$(MAKE) install

	# Don't need compiled files
	rm -f $(PKGLISPDIR)/*.elc

	# We need this in emacsen-install
	install -m 644 lisp/bfuncs $(PKGLISPDIR)

	# debhelper will handle this
	rm -f $(INFODIR)/dir*

# Build architecture-independent files here.
binary-indep: build install
	# target: binary-indep

	dh_testdir
	dh_testroot
	dh_installdirs
	dh_installinfo doc/edb.info
	dh_installdocs
#	dh_installexamples
#	dh_installmenu
	dh_installemacsen
#	dh_installinit
#	dh_installcron
#	dh_installmanpages
#	dh_undocumented
	dh_installchangelogs
#	dh_strip
	dh_compress
	dh_fixperms
#	dh_suidregister
	dh_installdeb
#	dh_shlibdeps
	dh_gencontrol
#	dh_makeshlibs
	dh_md5sums
	dh_builddeb

# Build architecture-dependent files here.
binary-arch: build
	# We have nothing to do.

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary
