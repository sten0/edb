#!/usr/bin/make -f

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

PACKAGE = edb

include debian/debian-vars.mk

config.status: configure
	# target: config.status
	dh_testdir
	./configure --prefix=$(PKGDIR)/usr

build-stamp: config.status
	# target: build-stamp
	dh_testdir

	# Reset *any* jobserver -j options. Won't compile in parallel
	$(MAKE) MAKEFLAGS= MFLAGS=

	touch build-stamp

build: build-stamp

clean:
	# target: clean
	dh_testdir
	dh_testroot
	rm -rf build-stamp $(PKGDIR)

	[ ! -f GNUMakefile ] || $(MAKE) clean

	find . -name GNUmakefile \
		-o -name "*[#~]*" \
		| xargs -r rm

	rm -f lisp/*.elc

	# Generated files
	rm -f lisp/edbcore.el
	rm -f doc/refcard.aux doc/refcard.log

	rm -f config.log config.status \
		examples/null examples/passwd \
		tests/ebatch

	dh_clean

install: build
	# target: install
	dh_testdir
	dh_testroot
	dh_prep

	# target: install call make
	$(MAKE) install

	# Don't need compiled files
	rm -f $(PKGLISPDIR)/*.elc

	# The 'make install' doesn't install all files. Do it by hand.
	install -m 644 lisp/*.el  $(PKGLISPDIR)
	# But do not include these, which are not edb-* namespace
	rm 	$(PKGLISPDIR)/connection.el \
		$(PKGLISPDIR)/state.el \
		$(PKGLISPDIR)/system.el

	# We need these in emacsen-install
	#
	# The byte compilation is real strange.
	# The bfuncs::edb-bfunc-make-all calls 'make', which reads GNUmakefile
	# with some hackery to print out variables (*.el file lists) stored there.
	# So GNUmakefile must be avalable for 'edb-bfunc-make-all'.

	install -m 644 lisp/bfuncs lisp/GNUmakefile $(PKGLISPDIR)

	# debhelper will handle this
	rm -f $(INFODIR)/dir*

	# Install examples

	install -m 755 -d $(PKGDOCDIR)
	tar -cf - examples | tar -C $(PKGDOCDIR) -xf -

# Build architecture-independent files here.
binary-indep: build install
	# target: binary-indep

	dh_testdir
	dh_testroot
	dh_installdirs
	dh_installinfo doc/edb.info
	dh_installdocs
#	dh_installexamples
#	dh_installmenu
	dh_installemacsen
#	dh_installinit
#	dh_installcron
#	dh_installmanpages
#	dh_undocumented
	dh_installchangelogs
#	dh_strip

	# Do not compress EDB example data files
	dh_compress -X.edb -X.dba -X.fmt -X.dat

	dh_fixperms
#	dh_suidregister
	dh_installdeb
#	dh_shlibdeps
	dh_gencontrol
#	dh_makeshlibs
	dh_md5sums
	dh_builddeb

# Build architecture-dependent files here.
binary-arch: build
	# We have nothing to do.

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary
