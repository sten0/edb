#!/usr/bin/make -f

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

PACKAGE = edb

include debian/debian-vars.mk

config.status: configure
	dh_testdir

	# Add here commands to configure the package.
	./configure --prefix=$$(pwd)/debian/$(PACKAGE)/usr

build: build-stamp
build-stamp: config.status
	dh_testdir

	# Add here commands to compile the package.
	$(MAKE)

	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	rm -rf build-stamp $(PKGDIR)

	[ ! -f GNUMakefile ] || $(MAKE) clean

	find . -name GNUmakefile \
		-o -name "*[#~]*" \
		| xargs -r rm

	rm -f lisp/*.elc

	rm -f config.log config.status \
		examples/null examples/passwd \
		tests/ebatch

	dh_clean

install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs

	# Add here commands to install the package into debian/cbm.
	$(MAKE) install

# Build architecture-independent files here.
binary-indep: build
#	dh_testversion
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs

	# Add here commands to install the files into debian/tmp

	install -m 755 -d $(PKGDIR)/usr/share/emacs/site-lisp/edb \
			  $(PKGDIR)/usr/share/info
	install -m 644 *.el debian/edb-fixes-1.21.el $(PKGDIR)/usr/share/emacs/site-lisp/edb
	install -m 644 edb.info* $(PKGDIR)/usr/share/info

	dh_installdocs
#	dh_installexamples
#	dh_installmenu
	dh_installemacsen
#	dh_installinit
#	dh_installcron
#	dh_installmanpages
#	dh_undocumented
	dh_installchangelogs
#	dh_strip
	dh_compress
	dh_fixperms
#	dh_suidregister
	dh_installdeb
#	dh_shlibdeps
	dh_gencontrol
#	dh_makeshlibs
	dh_md5sums
	dh_builddeb

# Build architecture-dependent files here.
binary-arch: build
	# We have nothing to do by default.

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary
